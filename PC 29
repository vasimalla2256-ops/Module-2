import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: MoveWidgetScreen(),
    );
  }
}

class MoveWidgetScreen extends StatefulWidget {
  @override
  _MoveWidgetScreenState createState() => _MoveWidgetScreenState();
}

class _MoveWidgetScreenState extends State<MoveWidgetScreen> {
  // Initial alignment is top-left
  Alignment _alignment = Alignment.topLeft;

  void _moveWidget() {
    setState(() {
      // Toggle between top-left and bottom-right
      _alignment = _alignment == Alignment.topLeft
          ? Alignment.bottomRight
          : Alignment.topLeft;
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text('Move Widget Example')),
      body: Stack(
        children: [
          AnimatedAlign(
            alignment: _alignment,
            duration: Duration(seconds: 1),
            curve: Curves.easeInOut,
            child: Container(
              width: 100,
              height: 100,
              color: Colors.blue,
              child: Center(
                  child: Text(
                'Move Me',
                style: TextStyle(color: Colors.white),
              )),
            ),
          ),
          Positioned(
            bottom: 50,
            left: 50,
            child: ElevatedButton(
              onPressed: _moveWidget,
              child: Text('Move Widget'),
            ),
          ),
        ],
      ),
    );
  }
}
